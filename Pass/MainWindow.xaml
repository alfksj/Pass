                            <Image Margin="10,0,10,25" Source="pack://application:,,,/Resources/win.png"/>
                            <Label x:Name="ip5" Content="255.255.255.255" Margin="0,62,0,0" Foreground="White" FontSize="11" HorizontalAlignment="Center"/>
