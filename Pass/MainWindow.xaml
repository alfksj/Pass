                    </StatusBarItem.RenderTransform>
                    <Label x:Name="statusText" Content="Nothing to do..." Background="{x:Null}" Foreground="White"/>
                </StatusBarItem>
                <Separator Grid.Column="1"/>
                <StatusBarItem Grid.Column="3">
