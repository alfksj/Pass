                    </ItemsPanelTemplate>
                </StatusBar.ItemsPanel>
                <StatusBarItem Grid.Column="0" Margin="-0.003,-8.333,-0.497,-7" RenderTransformOrigin="0.5,0.5" Foreground="White">
